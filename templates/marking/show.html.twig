{# @var \App\Entity\Marking object #}
{# @var \App\Entity\CardTemporary cardTemp #}
{% extends 'crud/show.html.twig' %}
{% block show_groups %}
    <div class="sonata-ba-show">
        <div class="sonata-ba-view">
            <div class="row">
                <div class="col-md-12 ">
                    <div class="box box-primary">
                        <div class="box-body table-responsive">
                            <h4>Постановщик: <span class="label label-default">{{ object.createdBy.fio }}</span></h4>
                            <h4>Исполнитель: <span class="label label-default">{{ object.executor }}</span></h4>
                            <h4>Всего единиц оборудования для маркировки: <span class="label label-default">{{ object.cards.count }}</span></h4>
                            <h4>Статус: <span class="label label-default">{{ object.statusTitle }}</span></h4>
                            {% if object.comment %}
                                <h4>Комментарий: <span class="label label-default">{{ object.comment }}</span></h4>
                            {% endif %}
                            <div>
                                <table class="table table-responsive table-bordered table-sm text-center table-head-top">
                                    <thead>
                                    <tr>
                                        <th>Наименование</th>
                                        <th>Серийный № трубы</th>
                                        <th>Серийный № ниппеля</th>
                                        <th> Серийный № муфты</th>
                                        <th>№ RFID-метки</th>
                                        <th>Примечание</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {# @var \App\Entity\Card card #}
                                    {% for card in object.cards %}
                                        <tr>
                                            {% if object.cardTemporary(card) %}
                                                {% set cardTemp = object.cardTemporary(card) %}
                                                <td class="text-left">{{ cardTemp.generalName }}</td>
                                                <td>{{ cardTemp.pipeSerialNumber }}</td>
                                                <td>{{ cardTemp.serialNoOfNipple }}</td>
                                                <td>{{ cardTemp.couplingSerialNumber }}</td>
                                                <td>{{ cardTemp.rfidTagNo }}</td>
                                                <td>{{ cardTemp.comment }}</td>
                                            {% else %}
                                                <td class="text-left">{{ card.generalName }}</td>
                                                <td>{{ card.pipeSerialNumber }}</td>
                                                <td>{{ card.serialNoOfNipple }}</td>
                                                <td>{{ card.couplingSerialNumber }}</td>
                                                <td>{{ card.rfidTagNo }}</td>
                                                <td>{{ card.taskCardOtherFieldsByTask(object.taskTypeId, object.id).comment }}</td>
                                            {% endif %}
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
