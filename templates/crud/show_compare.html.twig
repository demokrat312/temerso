{% extends "@SonataAdmin/CRUD/show_compare.html.twig" %}

{% block field_row %}
    {% for code in groups %}
        {% set show_group = admin.showgroups[code] %}

        <div class="{{ show_group.class|default('col-md-12') }} {{ no_padding|default(false) ? 'nopadding' }}">
            <div class="{{ show_group.box_class }}">
                <div class="box-header">
                    <h4 class="box-title">
                        {{ block('show_title') }}
                    </h4>
                </div>
                <div class="box-body table-responsive no-padding">
                    <table class="table">
                        <thead>
                        <tr>
                            <th></th>
                            <th>Обновленные данные</th>
                            <th>Данные до {{ app.request.get('compare_revision')|revision_date }}</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for field_name in show_group.fields %}
                            {{ block('show_field') }}
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    {% endfor %}
{% endblock %}